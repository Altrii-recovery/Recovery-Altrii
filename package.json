{
  "name": "recovery-altrii",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build:api": "pnpm -w --filter api build",
    "start:api": "pnpm -w --filter api start",
    "build:web": "pnpm -w --filter web build",
    "start:web": "pnpm -w --filter web start"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "eslint": "^9.35.0",
    "tsx": "^4.20.5",
    "turbo": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "fastify": "^5.6.0",
    "zod": "^4.1.5"
  }
}